    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "src/scripts",
    "outDir": "scripts",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [
      "node"
    ]
  },
